generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String   @unique
  cuentas  cuenta?
}

model cuenta {
  nro_cuenta Int      @id
  user_id    Int      @unique// Scalar field for foreign key
  amount     Int

  user       users    @relation(fields: [user_id], references: [id]) // Relation field
}

